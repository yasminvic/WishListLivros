@model WishListBooks.Models.Entities.Categoria

@{
    ViewData["Title"] = "Editar";
}

<div class="text-center title-page">
    <h1 class="display-1"><strong>Editar Categoria</strong></h1>
    <p class="display-6"></p>
</div>                      



<form asp-controller="Categorias" asp-action="Edit" method="post">
 <div class="container">
    <div class="row justify-content-center">
    <div class="col-3">
        <div class="form-group">
         <label asp-for="Nome" for="nome" class="color-label">Categoria</label>
        <input asp-for="Nome" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Categoria literária">
        <span asp-validation-for="Nome" class="text-danger"></span>    
    </div>
        <div class="buttons-edit-create form-group">
            <input type="submit" class="btn btn-warning w-100 btn-block" id="button-editar" value="Editar">
         </div> 
</div>

    </div>
 </div>
</form>


<div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}






