@using WishListBooks.Enum
@model WishListBooks.Models.Entities.User

@{
    ViewData["Title"] = "Criar";
}

<div class="text-center title-page">
    <h1 class="display-1"><strong>Adicionar Usuário</strong></h1>
</div>                      



<form asp-controller="Users" asp-action="Create" method="post">
 <div class="container">
    <div class="row justify-content-center">
    <div class="col-3">
        <div class="form-group text-dark">
         <label asp-for="Nome" for="nome" class="color-label">Usuário</label>
        <input asp-for="Nome" type="text" class="form-control"  aria-describedby="emailHelp" placeholder="O nome completo do usuário">
        <span asp-validation-for="Nome" class="text-danger"></span> 

        <label asp-for="Email" for="login" class="color-label">E-mail</label>
        <input asp-for="Email" type="text" class="form-control"  aria-describedby="emailHelp" placeholder="O e-mail do usuário">
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Login" for="login" class="color-label">Login</label>
        <input asp-for="Login" type="text" class="form-control" id="autor-input" aria-describedby="emailHelp" placeholder="O login do usuário">
        <span asp-validation-for="Login" class="text-danger"></span>

        <label asp-for="Senha" for="senha" class="color-label">Senha</label>
        <input asp-for="Senha" type="password" class="form-control"  aria-describedby="emailHelp" placeholder="A senha do usuário">
        <span asp-validation-for="Senha" class="text-danger"></span>
        
        <div class="form-group mt-2 ">
            <label asp-for="Perfil" class="color-label login-title"></label>
            <select asp-for="Perfil" class="form-control">
                <option value="0">Selecione</option>
                <option value="@PerfilEnum.Admin">Administrador</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>
            <span asp-validation-for="Perfil" class="text-danger"></span>
        </div>
    </div>
                <div class="form-group mt-3">
                <input type="submit" value="Cadastrar" class="btn btn-primary btn-block w-100" />
            </div>
         </div>
    
    </div>
 </div>
    
                                   
</form>

<div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



